<Window x:Class="WordWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="135" Width="330">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="label" Content="Имя нового документа" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="textBox_Copy4" HorizontalAlignment="Left" Height="23" Margin="85,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" IsEnabled="False"/>
        <Label x:Name="label_Copy4" Content="Файл" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="button_Copy" Content="Выбрать" HorizontalAlignment="Left" Margin="220,14,0,0" VerticalAlignment="Top" Width="92" Click="Button_Copy_Click" Height="22"/>
        <Button x:Name="button1" Content="Редактировать" HorizontalAlignment="Left" Margin="220,72,0,0" VerticalAlignment="Top" Width="92" Click="Button1_Click"/>

    </Grid>
</Window>
